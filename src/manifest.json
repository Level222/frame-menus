{
  "manifest_version": 3,
  "name": "Frame Menus",
  "version": "1.0.0",
  "description": "Add utilities for frames to the context menu",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "downloads",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
